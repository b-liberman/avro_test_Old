pipeline {
    agent any
    environment {
    	SPRING_PROFILES_ACTIVE = 'test'
    }
    stages {
        stage('build') {
        	steps {
	    	    echo 'Starting pipeline'
	    	    git url: 'https://github.com/b-liberman/avro_test.git'
	    	    dir('Avro Test') {
	    	    	sh './gradlew clean build test'
	    	    }
    	    }
        }
    }
}
